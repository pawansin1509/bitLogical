# Copy to .env and fill values for production
PORT=3000
JWT_SECRET=change-me-to-a-strong-secret
# Optional: configure MongoDB (if not present, server will use local db.json)
MONGO_URI=mongodb://localhost:27017/find-my-stuff
# SendGrid (email) or SMTP
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
# Optional: set to 'true' to send real delivery; otherwise demo returns verification code
SEND_REAL_VERIFICATION=false